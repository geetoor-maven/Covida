<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About APK"
            android:textAlignment="center"
            android:textColor="@color/textview"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/tool"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cardview"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Apk : "
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textview"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/virus_512"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/textview"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COVIDA"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textview"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Corona Virus Data"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/transtextview"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textview"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/transtextview"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cardview"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Developer by :"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textview"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/foto"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/textview"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AGUS KURNIAWAN"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textview"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coconut Computer Club Oriented Network And Technology"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/transtextview"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>